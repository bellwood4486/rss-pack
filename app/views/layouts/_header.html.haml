%header.navbar.navbar-fixed-top.navbar-inverse
  .container
    = link_to 'rss pack', root_path, id: 'logo'
    %nav
      %ul.nav.navbar-nav.navbar-right
        - if logged_in?
          %li
            = fa_icon 'lg inverse edit'
            = link_to 'フィード登録', discover_feeds_path
          %li= link_to 'フィード一覧', feeds_path
          %li.dropdown
            %a.dropdown-toggle{'data-toggle' => 'dropdown', :href => '#'}
              = "#{current_user.email}"
              %b.caret
            %ul.dropdown-menu
              %li= link_to 'マイページ', '#'
              %li= link_to '設定', '#'
              %li.divider
              %li
                = link_to 'ログアウト', logout_path, method: :delete
