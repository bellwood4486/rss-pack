
%h1 Confirm
.row
  .col-md-6.col-md-offset-3
    = @blog.feeds.each do |feed|
      = form_for(@blog, url: blogs_path) do |f|
        = f.hidden_field_tag :content_type, feed.content_type
        = title : "#{feed.title}"
        = content_type : "#{feed.content_type}"
        = url : "#{feed.url}"
        = f.submit '登録', class: "btn btn-primary"
    = end