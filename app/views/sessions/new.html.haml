%h1 ログイン

.row
  .col-md-6.col-md-offset-3
    = form_for(@identity, url: login_path) do |f|
      = render 'shared/errors', model: @identity
      .form-group
        = f.label :email, for: 'email', class: 'sr-only'
        = f.email_field :email, id: 'email', class: 'form-control', placeholder: 'メールアドレス'
      .form-group
        = f.label :password, for: 'password', class: 'sr-only'
        = f.password_field :password, id: 'password', class: 'form-control', placeholder: 'パスワード'
      = f.submit 'ログイン', class: 'btn btn-primary'
