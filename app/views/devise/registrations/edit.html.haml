.row.justify-content-center
  .col-6
    .page-header
      %h1
        = t(".title")

    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = f.input :email, input_html: { autocomplete: "email" }
      = f.input :password, hint: password_length_hint(@minimum_password_length),
        placeholder: "(#{t(".leave_blank_if_you_don_t_want_to_change_it")})"
      = f.input :password_confirmation
      = f.input :current_password,
        placeholder: "(#{t(".we_need_your_current_password_to_confirm_your_changes")})"
      = f.button :submit, t(".update"), class: "btn-primary"

    %hr
    %h3= t(".cancel_my_account")
    %p
      = t(".unhappy")
      = button_to t(".cancel_my_account"), registration_path(resource_name), data: { confirm: t(".are_you_sure") }, method: :delete, class: "btn btn-danger"

