.row.justify-content-center
  .col-4
    .page-header
      %h1
        = t(".sign_up")

    = minimal_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = f.input :email, input_html: { autocomplete: "email" }
      = f.input :password, hint: password_length_hint(@minimum_password_length)
      = f.input :password_confirmation
      = f.button :submit, t(".sign_up"), class: "btn-primary"
    %div
      = render "devise/shared/links"
